<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.jiecaovideoplayertest.activity.UISmallChangeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="18dp"
            android:text="Standard ui with share button, visible after fullscreen" />

        <com.example.administrator.jiecaovideoplayertest.Customview.JCVideoPlayerStandardShowShareButtonAfterFullscreen
            android:id="@+id/custom_videoplayer_standard_with_share_button"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="18dp"
            android:text="Standard ui show title after fullscreen" />

        <com.example.administrator.jiecaovideoplayertest.Customview.JCVideoPlayerStandardShowTitleAfterFullscreen
            android:id="@+id/custom_videoplayer_standard_show_title_after_fullscreen"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="18dp"
            android:text="Standard ui show textureview after auto complete" />

        <com.example.administrator.jiecaovideoplayertest.Customview.JCVideoPlayerStandardShowTextureViewAfterAutoComplete
            android:id="@+id/custom_videoplayer_standard_show_textureview_aoto_complete"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="18dp"
            android:text="Standard ui show textureview after auto complete" />

        <com.example.administrator.jiecaovideoplayertest.Customview.JCVideoPlayerStandardAutoCompleteAfterFullscreen
            android:id="@+id/custom_videoplayer_standard_aoto_complete"
            android:layout_width="match_parent"
            android:layout_height="200dp" />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
