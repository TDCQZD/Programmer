<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhangdai.regularexpressiontest.MainActivity">

   <EditText
       android:id="@+id/et_input"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentTop="true"
       android:layout_alignParentLeft="true"
       android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bt_ver_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证用户名"
        android:layout_below="@+id/et_input"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <Button
        android:id="@+id/bt_ver_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证密码"
        android:layout_alignBaseline="@+id/bt_ver_username"
        android:layout_alignBottom="@+id/bt_ver_username"
        android:layout_toLeftOf="@+id/bt_ver_url"
        android:layout_toStartOf="@+id/bt_ver_url" />

    <Button
        android:id="@+id/bt_ver_tell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证手机号"
        android:layout_alignBaseline="@+id/bt_ver_pwd"
        android:layout_alignBottom="@+id/bt_ver_pwd"
        android:layout_toLeftOf="@+id/bt_ver_email"
        android:layout_toStartOf="@+id/bt_ver_email" />

    <Button
        android:id="@+id/bt_ver_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证邮箱"
        android:layout_alignBaseline="@+id/bt_ver_tell"
        android:layout_alignBottom="@+id/bt_ver_tell"
        android:layout_toRightOf="@+id/bt_ver_url"
        android:layout_toEndOf="@+id/bt_ver_url" />

    <Button
        android:id="@+id/bt_ver_chinese"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="验证汉字"
        android:layout_below="@+id/bt_ver_tell"
        android:layout_toRightOf="@+id/bt_ver_tell"
        android:layout_toEndOf="@+id/bt_ver_tell" />

    <Button
        android:id="@+id/bt_ver_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="校验URL"
        android:layout_alignBaseline="@+id/bt_ver_chinese"
        android:layout_alignBottom="@+id/bt_ver_chinese"
        android:layout_toRightOf="@+id/bt_ver_ip"
        android:layout_toEndOf="@+id/bt_ver_ip" />

    <Button
        android:id="@+id/bt_ver_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="校验IP地址"
        android:layout_alignBaseline="@+id/bt_ver_id"
        android:layout_alignBottom="@+id/bt_ver_id"
        android:layout_toRightOf="@+id/bt_ver_id"
        android:layout_toEndOf="@+id/bt_ver_id" />

    <Button
        android:id="@+id/bt_ver_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="校验身份证"
        android:layout_below="@+id/bt_ver_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
